<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/veg1">


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:paddingLeft="20sp"
            android:paddingRight="20sp"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="@string/junkcode"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20sp"
            android:paddingRight="10sp"
            android:paddingBottom="20dp"
            android:layout_marginRight="15sp">


            <EditText
                android:id="@+id/inputName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Name"
                android:textColorHint="@color/colorAccent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:ems="10"
                android:background="@drawable/textview_border"
                android:inputType="text"
                android:textSize="15sp"
                android:drawableLeft="@drawable/left_name_icon"
                android:drawablePadding="10sp"
                android:gravity="center_vertical"
                android:elevation="4dp"/>

            <EditText
                android:id="@+id/Phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="15dp"
                android:background="@drawable/textview_border"
                android:drawableLeft="@drawable/phone_left_icon"
                android:drawablePadding="10sp"
                android:elevation="4dp"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Phone No."
                android:inputType="text"
                android:textColorHint="@color/colorAccent"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Email Adress"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/colorAccent"
                android:ems="10"
                android:background="@drawable/textview_border"
                android:inputType="text"
                android:textSize="15sp"
                android:drawableLeft="@drawable/left_email_icon"
                android:drawablePadding="10sp"
                android:gravity="center_vertical"
                android:elevation="4dp"/>

            <EditText
                android:id="@+id/Address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Adress"
                android:layout_marginBottom="15dp"
                android:textColorHint="@color/colorAccent"
                android:ems="10"
                android:background="@drawable/textview_border"
                android:inputType="text"
                android:textSize="15sp"
                android:drawableLeft="@drawable/left_adress_icon"
                android:drawablePadding="10sp"
                android:gravity="center_vertical"
                android:elevation="4dp"/>

            <TextView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Vegetables"
                android:textSize="16sp"
                android:ems="10"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/textview_border"
                android:textColor="@color/colorAccent"
                android:drawableLeft="@drawable/left_list_icon"
                android:drawablePadding="10sp"
                android:elevation="4dp"
                />

            <TextView
                android:id="@+id/SelectedFruit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Fruits"
                android:textSize="16sp"
                android:ems="10"
                android:layout_marginBottom="15dp"
                android:gravity="center_vertical"
                android:background="@drawable/textview_border"
                android:textColor="@color/colorAccent"
                android:drawableLeft="@drawable/left_list_icon"
                android:drawablePadding="10sp"
                android:elevation="4dp"
                />


            <EditText
                    android:id="@+id/Amount"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:hint="Amount of vegetables"
                    android:textColorHint="@color/colorAccent"
                    android:ems="10"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/textview_border"
                    android:inputType="text"
                    android:textSize="15sp"
                    android:drawableLeft="@drawable/left_amount_icon"
                    android:drawablePadding="10sp"
                    android:elevation="4dp"/>




            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open again if location is not found"
                android:textSize="16sp"
                android:ems="10"
                android:gravity="center_vertical"
                android:background="@drawable/textview_border"
                android:textColor="@color/colorAccent"
                android:drawableLeft="@drawable/name_edit_text"
                android:drawablePadding="10sp"
               android:elevation="4dp"
                />

            <Button
                android:id="@+id/makeOrder"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Make Order"
                android:textSize="22sp"
                android:textColor="#ffffff"
                android:background="@drawable/button_rounded"
                android:layout_marginTop="40dp" />

        </LinearLayout>




    </LinearLayout>




</ScrollView>
</RelativeLayout>
